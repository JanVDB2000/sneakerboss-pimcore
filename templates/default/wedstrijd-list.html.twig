{% extends 'template-one.html.twig' %}

{% block body %}
    <section class="mb-lg-10 mt-lg-14 my-5">
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <h1>Sneakerboss</h1>
                    <p class="fs-4"> hieronder vindt je de lijst met de mensen die hebben deelgenomen aan de wedstrijd</p>

                </div>
                <div class="col-12 mb-6 mx-auto">
                    <table class="table">
                        <thead>
                        <tr>
                            <th scope="col">#</th>
                            <th scope="col">Voornaam</th>
                            <th scope="col">Achtenaam</th>
                            <th scope="col">Email</th>
                            <th scope="col">Klantenummer</th>
                            <th scope="col">GeboorteDatum</th>
                            <th scope="col">Favoriete Merk</th>
                            <th scope="col">Schoenmaat</th>
                            <th scope="col">Afbeeling</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for wedstrijdform in wedstrijdforms %}
                        <tr>
                            <th scope="row"></th>
                            <td>{{ wedstrijdform.voornaam }}</td>
                            <td>{{ wedstrijdform.achternaam }}</td>
                            <td>{{ wedstrijdform.email }}</td>
                            <td>{{ wedstrijdform.klantnummer }}</td>
                            <td>{{ wedstrijdform.geboortedatum }}</td>
                            <td>{{ wedstrijdform.merk }}</td>
                            <td>{{ wedstrijdform.schoenmaat }}</td>
                            <td>
                                <img class="bd-placeholder-img rounded-circle" width="140" height="140" src="{{ wedstrijdform.afbeelding.thumbnail('wedstrijdform')}}" alt="">
                            </td>

                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

